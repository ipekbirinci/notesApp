<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".detail.detailFragment">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@color/purpleforbackgroud"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/detail_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:gravity="center"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/detail_weather"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="weather"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/image_weather"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/sunny"></ImageView>

    </LinearLayout>

    <TextView
        android:id="@+id/detail_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/wall_paper"
        android:hint="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse laoreet nulla nec eleifend hendrerit. Aenean rutrum dolor id arcu viverra consectetur. Morbi eget magna feugiat, convallis sem ut, porta massa. Proin bibendum, ante sed laoreet tristique, elit arcu dapibus quam, eu viverra est nunc sit amet purus. Aliquam condimentum sapien vel tortor scelerisque molestie."
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="10dp"

        android:paddingBottom="20dp"
        android:scrollHorizontally="true"
        app:layout_constraintBottom_toTopOf="@+id/detail_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/edit_notes"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:background="@color/pink"
        android:src="@drawable/edit_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"></androidx.appcompat.widget.AppCompatImageButton>

    <TextView
        android:id="@+id/detail_date"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_gravity="right"
        android:layout_weight="10"
        android:background="@color/pink"
        android:gravity="center"
        android:text="00/00/0000"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edit_notes" />


</androidx.constraintlayout.widget.ConstraintLayout>

